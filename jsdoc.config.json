{
    "tags": {
        "allowUnknownTags": [
            "component",
            "slot"
        ]
    },
    "source": {
        "include": [
            "src"
        ],
        "includePattern": "\\.(vue|js|ts|jsx|tsx)$",
        "excludePattern": "(node_modules/|docs/)"
    },
    "plugins": [
        "node_modules/jsdoc-vuejs",
        "plugins/markdown",
        "better-docs/component"
    ],
    "opts": {
        "destination": "./docs",
        "recurse": true,
        "template": "node_modules/better-docs",
        "readme": "./README.md"
    },
    "templates": {
        "better-docs": {
            "name": "TodoList Documentation"
        },
        "cleverLinks": false,
        "monospaceLinks": false
    },
    "markdown": {
        "hardwrap": false,
        "idInHeadings": true
    }
}